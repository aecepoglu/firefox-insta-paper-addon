{
	"manifest_version": 2,
	"name": "Better Insta-Paper",
	"version": "0.1.0",

	"author": "aecepoglu",
	"description": "Sends pages to instapaper and does it better",
	"homepage_url": "http://github.com/aecepoglu/firefox-instapaper-addon",
	"icons": {
		"48": "icons/logo.png"
	},

	"permissions": [
		"activeTab",
		"storage"
	],

	"options_ui": {
		"page": "options/view.html",
		"browser_style": true
	},

	"page_action": {
		"default_icon": "icons/logo.png",
		"default_title": "send to Instapaper",
		"default_popup": "popup/view.html",
		"browser_style": true,
		"show_matches": ["<all_urls>"]
	},
	"background": {
		"scripts": ["code.js"]
	}
}
